{
  "source": {
    "exclude": [
      "config",
      "coverage",
      "docs",
      "node_modules",
      "public",
      "temp",
      "test"
    ],

    "include": [
      ".",
      "README.md"
    ]
  },

  "opts": {
    "destination": "docs",
    "recurse": true,
    "private": true
  },

  "plugins": [
    "plugins/markdown"
  ]
}
